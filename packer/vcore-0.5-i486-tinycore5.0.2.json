      "destination": "/home/tc/vbox-ga.tar.gz"
   },
   {
      "type": "file",
      "source": "vcore/files/home/splash-vcore",
      "destination": "/home/tc/splash-vcore"
   },
   {
      "type": "file",
      "source": "vcore/files/home/onboot",
      "destination": "/home/tc/onboot"
   },
