      "iso_url": "http://distro.ibiblio.org/tinycorelinux/5.x/x86/release/CorePlus-5.0.2.iso",
      "ssh_username": "tc",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/home/tc/bin/shutdown' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "256"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox"],
      "keep_input_artifact": true,
      "output": "vcore-0.5-i486-tinycore5.0.2_{{.BuildName}}_{{.Provider}}.box"
    }
  ]
}
